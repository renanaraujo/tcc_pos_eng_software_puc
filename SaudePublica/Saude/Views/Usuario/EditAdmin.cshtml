@model Saude.Models.Entity.Usuario
@{
	ViewData["Title"] = "Create Admin";
}

<h1>Create</h1>

<h4>Usuario</h4>
<hr />

<form asp-action="EditAdmin">
	<div class="row">
		<div class="col-md-12">
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<input asp-for="Id" type="hidden" />
			<div class="form-group">
				<label aria-label="Login" asp-for="Login" class="control-label"></label>
				<input aria-label="Login" asp-for="Login" class="form-control" />
				<span asp-validation-for="Login" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label aria-label="Senha" asp-for="Senha" class="control-label"></label>
				<input aria-label="Senha" asp-for="Senha" type="password" class="form-control" />
				<span asp-validation-for="Senha" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label aria-label="Email" asp-for="Email" class="control-label"></label>
				<input aria-label="Email" asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" aria-label="Salvar" value="Salvar" class="btn btn-primary" />
			</div>
		</div>
	</div>
</form>


<div>
	<a class="btn btn-info" aria-label="Voltar para a lista" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}